{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "A auth micro service",
  "main": "index.ts",
  "scripts": {
    "dev": "nodemon --legacy-watch src/server.ts",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "test": "jest --watch --runInBand",
    "docker-build:dev":"docker build -t auth-service:dev -f docker/dev/DockerFile .",
    "docker-run:dev": "docker run --name auth-service-container --rm -it -v %cd%:/usr/src/app:delegated -v /usr/src/app/node_modules --env-file %cd%/.env -p 5501:5501 -e NODE_ENV=development auth-service:dev"
  },
  "author": "Vijaysai Yekbote <vijaysaiyekbote@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "prettier": "3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "winston": "^3.11.0"
  }
}
